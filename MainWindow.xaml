<Window x:Class="WPF_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:WPF_Project"
        xmlns:Views="clr-namespace:WPF_Project.Views"    
        xmlns:vm="clr-namespace:WPF_Project.ViewModel"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"            
        mc:Ignorable="d"
        Title="FlightGear Simulator" Height="450" Width="800" Closed="Window_Closed">
    <Grid Background = "LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button Content="{Binding VM_ConnectionButton, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="91" RenderTransformOrigin="0.776,0.375" Click="Button_Click" Height="30" BorderBrush="#FFEEEEEE" Background="#FF454545" Cursor="" Foreground="White"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="694,0,-693.2,0" VerticalAlignment="Top" Width="100" Height="30"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="15" HorizontalAlignment="Center">
                Map
                </TextBlock>
            </Grid>
            <m:Map Mode="Road" ZoomLevel="2" Margin="0,28,9.8,0" CredentialsProvider="AgaQmHHnv60XlDswbLa6YTuKKX8RqzUoV1XdINhXuOgXQgv9c6YiY22ZqwsKoE6l">
                <Canvas m:MapLayer.Position="-2, -50"
                        m:MapLayer.PositionOrigin="BottomCenter" Width="30" Height="30"
                        >
                    <m:Pushpin />
                </Canvas>
            </m:Map>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="246*"/>
                        <ColumnDefinition Width="151*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="15" HorizontalAlignment="Center" Margin="160,0,9.2,158.6" Grid.RowSpan="2">
                    Dashboard
                    </TextBlock>
                    <Grid Grid.ColumnSpan="2" Margin="0,30,-0.2,-0.4" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="10" HorizontalAlignment="Left">
                         heading-deg
                        </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="0" FontSize="10" HorizontalAlignment="Left">
                         gps_vertical-speed
                        </TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="0" FontSize="10" HorizontalAlignment="Left">
                         gps_ground-speed
                        </TextBlock>
                        <TextBlock Grid.Row="3" Grid.Column="0" FontSize="10" HorizontalAlignment="Left">
                         indicated-speed
                        </TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="2" FontSize="10" HorizontalAlignment="Left">
                         gps_altitude-ft
                        </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="2" FontSize="10" HorizontalAlignment="Left">
                         internal-roll-deg
                        </TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="2" FontSize="10" HorizontalAlignment="Left">
                        internal-pitch-deg
                        </TextBlock>
                        <TextBlock Grid.Row="3" Grid.Column="2" FontSize="10" HorizontalAlignment="Left">
                         altimeter_altitude-ft
                        </TextBlock>

                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding VM_IndicatedHeadingDeg, Mode=OneWay}" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding VM_GpsIndicatedVerticalSpeed, Mode=OneWay}" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding VM_GpsIndicatedGroundSpeedKt, Mode=OneWay}" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding VM_AirspeedIndicatorIndicatedSpeedKt, Mode=OneWay}" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding VM_GpsIndicatedAltitudeFt, Mode=OneWay}" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding VM_AttitudeIndicatorInternalRollDeg, Mode=OneWay}" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding VM_AttitudeIndicatorInternalPitchDeg, Mode=OneWay}" FontSize="10" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding VM_AltimeterIndicatedAltitudeFt, Mode=OneWay}" FontSize="10" HorizontalAlignment="Left"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="15" HorizontalAlignment="Center">
                    Controllers
                    </TextBlock>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform X="-25" Y="-6"/>
                                </TransformGroup>
                            </Grid.RenderTransform>
                            <Views:Joystick RenderTransformOrigin="0.5,0.5" x:Name="myJoystick" Margin="24,0,-23.6,0">
                                <Views:Joystick.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.45" ScaleY="0.45"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform X="-33" Y="-40"/>
                                    </TransformGroup>
                                </Views:Joystick.RenderTransform>
                            </Views:Joystick>
                        </Grid>
                        <Grid Grid.ColumnSpan="2" Margin="198,0,-0.2,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="12" HorizontalAlignment="Center">
                            Aileron
                            </TextBlock>
                            <Slider Grid.Row="1"
                                    VerticalAlignment="Center"
                                    x:Name="aileronSlider"  
                                    Minimum="-1" 
                                    Maximum="1"
                                    Value="{Binding VM_Aileron, Mode=TwoWay}"
                                    TickFrequency="0.1"
                                    AutoToolTipPrecision="2"
                                    ValueChanged="aileronSlider_ValueChanged"
                                    AutoToolTipPlacement="TopLeft"
                                    TickPlacement="BottomRight"
                                    Background="#FF101457"
                                    LargeChange="0.1"
                                    SmallChange="0.1"/>
                            <TextBlock FontWeight="Bold" Grid.Row="2" FontSize="12" HorizontalAlignment="Center">
                            Throttle
                            </TextBlock>
                            <Slider Grid.Row="3"
                                    VerticalAlignment="Center"
                                    x:Name="throttleSlider"  
                                    Minimum="0" 
                                    Maximum="1"
                                    Value="{Binding VM_Throttle, Mode=TwoWay}"
                                    TickFrequency="0.05"
                                    AutoToolTipPrecision="2"
                                    AutoToolTipPlacement="TopLeft"
                                    TickPlacement="BottomRight"
                                    ValueChanged="throttleSlider_ValueChanged"                 
                                    Background="#FF101457"
                                    LargeChange="0.05"
                                    SmallChange="0.05"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="20" HorizontalAlignment="Center">
            FlightGear Simulator
        </TextBlock>
    </Grid>
</Window>
