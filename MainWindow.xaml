<Window x:Class="WPF_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:WPF_Project"
        xmlns:Views="clr-namespace:WPF_Project.Views"
        mc:Ignorable="d"
        Title="FlightGear Simulator" Height="450" Width="800">
    <Grid Background = "LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="15" HorizontalAlignment="Center">
                Map
                </TextBlock>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="15" HorizontalAlignment="Center">
                    Dashboard
                    </TextBlock>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" FontSize="10" HorizontalAlignment="Left">
                         heading-deg
                        </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="0" FontSize="10" HorizontalAlignment="Left">
                         gps_vertical-speed
                        </TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="0" FontSize="10" HorizontalAlignment="Left">
                         gps_ground-speed
                        </TextBlock>
                        <TextBlock Grid.Row="3" Grid.Column="0" FontSize="10" HorizontalAlignment="Left">
                         indicated-speed
                        </TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="2" FontSize="10" HorizontalAlignment="Left">
                         gps_altitude-ft
                        </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="2" FontSize="10" HorizontalAlignment="Left">
                         internal-roll-deg
                        </TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="2" FontSize="10" HorizontalAlignment="Left">
                        internal-pitch-deg
                        </TextBlock>
                        <TextBlock Grid.Row="3" Grid.Column="2" FontSize="10" HorizontalAlignment="Left">
                         altimeter_altitude-ft
                        </TextBlock>

                        <TextBlock Grid.Row="0" Grid.Column="1" FontSize="10" HorizontalAlignment="Left">
                         0.0
                        </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="10" HorizontalAlignment="Left">
                         0.0
                        </TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="1" FontSize="10" HorizontalAlignment="Left">
                         0.0
                        </TextBlock>
                        <TextBlock Grid.Row="3" Grid.Column="1" FontSize="10" HorizontalAlignment="Left">
                         0.0
                        </TextBlock>
                        <TextBlock Grid.Row="0" Grid.Column="3" FontSize="10" HorizontalAlignment="Left">
                         0.0
                        </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="3" FontSize="10" HorizontalAlignment="Left">
                         0.0
                        </TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="3" FontSize="10" HorizontalAlignment="Left">
                        0.0
                        </TextBlock>
                        <TextBlock Grid.Row="3" Grid.Column="3" FontSize="10" HorizontalAlignment="Left">
                         0.0
                        </TextBlock>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="15" HorizontalAlignment="Center">
                    Controllers
                    </TextBlock>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" RenderTransformOrigin="0.5,0.5">
                            <Grid.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform X="-25" Y="-6"/>
                                </TransformGroup>
                            </Grid.RenderTransform>
                            <Views:Joystick RenderTransformOrigin="0.5,0.5">
                                <Views:Joystick.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.45" ScaleY="0.45"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform X="-33" Y="-40"/>
                                    </TransformGroup>
                                </Views:Joystick.RenderTransform>
                                <Views:Joystick.DataContext>
                                    <Views:Joystick/>
                                </Views:Joystick.DataContext>
                            </Views:Joystick>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="12" HorizontalAlignment="Center">
                            Aileron
                            </TextBlock>
                            <Slider Grid.Row="1"
                                    VerticalAlignment="Center"
                                    x:Name="aileronSlider"  
                                    Minimum="0" 
                                    Maximum="10"                                    
                                    AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"
                                    ValueChanged="aileronSlider_ValueChanged"/>
                            <TextBlock FontWeight="Bold" Grid.Row="2" FontSize="12" HorizontalAlignment="Center">
                            Throttle
                            </TextBlock>
                            <Slider Grid.Row="3"
                                    VerticalAlignment="Center"
                                    x:Name="throttleSlider"  
                                    Minimum="0" 
                                    Maximum="10"                                    
                                    AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"
                                    ValueChanged="throttleSlider_ValueChanged"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <TextBlock FontWeight="Bold" Grid.Row="0" FontSize="20" HorizontalAlignment="Center">
            FlightGear Simulator
        </TextBlock>
    </Grid>
</Window>
